meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge')
meta(name='viewport', content='width=device-width, initial-scale=1')

meta(name='description', content='' + description)
meta(name='keywords', content='' + keywords)
meta(name='robots', content='all')
meta(http-equiv='cache-control', content='public')
meta(http-equiv='language', content='en-us')
meta(name='theme-color', content='#7cb242')

meta(property='og:description', content='' + description)
meta(property='og:author', content='Leap Blogger')
meta(property='og:type', content='website')
meta(property='og:url', content='' + host)
meta(property='og:title', content=`Leap Blogger | ${partials}`)
meta(property='og:image', content=`${detailImage ? detailImage : '/assets/img/leapfrog-logo-512.png'}?id=${hashId}`)
meta(property='og:site_name', content='Leap Blogger')
meta(property='name', content='Leap Blogger')

meta(name='apple-mobile-web-app-capable', content='yes')
meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
meta(name='apple-mobile-web-app-title' content=`Leap Blogger | ${partials}`)
meta(name='apple-mobile-web-app-status-bar-style' content='black')
meta(name='mobile-web-app-capable' content='yes')
meta(name='msapplication-TileColor' content='#7cb242')

meta(name='twitter:card' content='summary')
meta(name='twitter:url' content='' + host)
meta(name='twitter:title' content=`Leap Blogger | ${partials}`)
meta(name='twitter:description' content='' + description)
meta(name='twitter:image' content=`${detailImage ? detailImage : '/assets/img/leapfrog-logo-512.png'}?id=${hashId}`)
meta(name='twitter:creator' content='@leapblogger')

link(rel='apple-touch-icon' href=`/assets/img/leapfrog-logo-512.png?id=${hashId}`)
link(rel='apple-touch-startup-image' href=`/assets/img/leapfrog-logo-512.png?id=${hashId}`)

link(type='image/x-icon', rel='apple-touch-icon-precomposed', href=`/assets/img/leapfrog-logo-512.png?id=${hashId}`)
link(type='image/x-icon', rel='shortcut icon', href=`/assets/img/leapfrog-logo-512.png?id=${hashId}`)
link(type='image/x-icon', rel='icon', href=`/assets/img/leapfrog-logo-512.png?id=${hashId}`)

link(rel='canonical', href='' + host)
link(rel='manifest', href='/assets/manifest.json')
